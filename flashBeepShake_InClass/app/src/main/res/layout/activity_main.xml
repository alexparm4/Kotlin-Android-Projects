<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="335dp"
            android:layout_height="187dp" android:id="@+id/displayTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/flashlight_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Vibrate"
            android:layout_width="137dp"
            android:layout_height="102dp" android:id="@+id/vibrate_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/beep_button"/>
    <Button
            android:text="Beep"
            android:layout_width="137dp"
            android:layout_height="102dp" android:id="@+id/beep_button"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintVertical_bias="0.107"/>
    <Button
            android:text="Flashlight"
            android:layout_width="137dp"
            android:layout_height="102dp" android:id="@+id/flashlight_button"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.107" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/beep_button" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scan_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginBottom="96dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bluetooth_tv"
            app:layout_constraintVertical_bias="0.738"/>
    <Button
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/connect_button"
            android:layout_marginBottom="104dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scan_button"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintHorizontal_bias="0.362"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bluetooth_tv"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancel_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bluetooth_tv" app:layout_constraintVertical_bias="0.676"/>
    <TextView
            android:text="BlueTooth Setup"
            android:layout_width="241dp"
            android:layout_height="41dp" android:id="@+id/bluetooth_tv"
            android:textSize="26sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/vibrate_button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>