<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".ColorBlenderMain" android:background="@drawable/paintbgtall">
    <Button
            android:text="@string/import_button"
            android:layout_width="106dp"
            android:layout_height="47dp" android:id="@+id/importColor1"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.906"
            android:fontFamily="casual" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/color1_staticview" android:textStyle="bold"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="347dp"
            android:layout_height="303dp" android:id="@+id/blendView"
            android:background="@android:color/background_dark"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/blenderBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="53dp"
            android:layout_height="170dp" android:id="@+id/color2_dynamicview"
            android:background="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.383"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="center"
            android:gravity="center" android:fontFamily="casual" android:text="@string/percent_initial_text"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="53dp"
            android:layout_height="170dp"
            android:background="@android:color/background_dark"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.573"
            android:gravity="center" android:text="@string/percent_initial_text"
            android:textColor="@android:color/white"
            android:textStyle="bold" android:fontFamily="casual" android:id="@+id/color1_dynamicview"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>
    <SeekBar
            android:layout_width="339dp"
            android:layout_height="39dp" android:id="@+id/blenderBar"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:progress="50" android:backgroundTint="#00FFFF00"
            android:progressBackgroundTint="@android:color/holo_blue_dark"
            android:progressTint="@android:color/holo_red_dark"
            android:thumb="@drawable/colorwheel" android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.517"/>
    <TextView
            android:layout_width="106dp"
            android:layout_height="117dp" android:id="@+id/color1_staticview"
            android:background="@android:color/black"
            android:textAlignment="center" android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.856"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.973"/>
    <TextView
            android:layout_width="106dp"
            android:layout_height="117dp" android:id="@+id/color2_staticview"
            android:background="@android:color/black"
            android:textAlignment="center" android:textStyle="bold"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.856"
            android:layout_marginEnd="272dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.92"/>
    <Button
            android:layout_width="106dp"
            android:layout_height="47dp" android:id="@+id/importColor2"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.079"
            android:text="@string/import_button" android:fontFamily="casual" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/color2_staticview" android:textStyle="bold"
            android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>