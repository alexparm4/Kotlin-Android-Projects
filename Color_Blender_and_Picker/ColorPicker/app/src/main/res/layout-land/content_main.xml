<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" android:id="@+id/toChange" android:background="@mipmap/tiedyetall3">

    <Button
            android:text="@string/export_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/exportButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.012"
            android:visibility="invisible" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:textStyle="bold" android:fontFamily="casual"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="25dp" android:id="@+id/redTextView"
            app:layout_constraintStart_toEndOf="@+id/redBar" android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/greenTextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.484" android:background="#000000" android:textColor="#FFFFFF"
            android:textStyle="bold" android:text="0" android:textAlignment="center" android:fontFamily="casual"/>
    <SeekBar
            android:layout_width="474dp"
            android:layout_height="29dp" android:id="@+id/blueBar"
            android:progress="0"
            android:thumbTint="#0000FF" android:progressTint="#0000FF" android:progressBackgroundTint="#0000FF"
            android:layout_marginStart="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957"/>
    <SeekBar
            android:layout_width="467dp"
            android:layout_height="21dp" android:id="@+id/greenBar"
            android:progress="0"
            android:thumbTint="#00FF00" android:progressTint="#00FF00" android:progressBackgroundTint="#00FF00"
            tools:layout_editor_absoluteX="151dp" tools:layout_editor_absoluteY="244dp"/>
    <SeekBar
            android:layout_width="470dp"
            android:layout_height="24dp" android:id="@+id/redBar"
            android:elevation="0dp"
            android:progress="0"
            android:thumbTint="#FF0000"
            android:progressTint="#FF0000"
            android:progressBackgroundTint="#FF0000" tools:layout_editor_absoluteY="201dp"
            tools:layout_editor_absoluteX="154dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="25dp" android:id="@+id/greenTextView"
            app:layout_constraintStart_toEndOf="@+id/greenBar" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/blueTextView" app:layout_constraintHorizontal_bias="0.413"
            android:textColor="#FFFFFF" android:background="#000000" android:textStyle="bold" android:text="0"
            android:textAlignment="center" android:fontFamily="casual"/>
    <TextView
            android:layout_width="49dp"
            android:layout_height="25dp" android:id="@+id/blueTextView"
            app:layout_constraintStart_toEndOf="@+id/blueBar" android:layout_marginStart="4dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="#000000" android:textStyle="bold" android:textColor="#FFFFFF" android:text="0"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.47" android:fontFamily="casual"/>
    <TextView
            android:layout_width="635dp"
            android:layout_height="156dp" android:id="@+id/colorView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@android:color/black"
            app:layout_constraintHorizontal_bias="0.506" tools:layout_editor_absoluteY="27dp"/>

</android.support.constraint.ConstraintLayout>